<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tech.chhsich.backend.mapper.MenuMapper">

    <select id="findByCategoryIdAndProductLock" resultType="tech.chhsich.backend.entity.Menu">
        SELECT * FROM menu WHERE cateid = #{categoryId} AND productlock = #{productLock}
    </select>

    <select id="findByNewStuijianAndProductLock" resultType="tech.chhsich.backend.entity.Menu">
        SELECT * FROM menu WHERE newstuijian = #{newStuijian} AND productlock = #{productLock}
    </select>

    <select id="findByProductLock" resultType="tech.chhsich.backend.entity.Menu">
        SELECT * FROM menu WHERE productlock = #{productLock}
    </select>

    <select id="findByCategoryId" resultType="tech.chhsich.backend.entity.Menu">
        SELECT * FROM menu WHERE cateid = #{categoryId}
    </select>

    <update id="updateSales">
        UPDATE menu SET xiaoliang = xiaoliang + #{quantity} WHERE id = #{menuId}
    </update>

</mapper>